package arraysClass;

public class Java_Arrays {
	 
	public static void main(String[] args) {
		
            int a[] = {10,2,5,20,1,100, -1, 99,89,66};
            int n=a.length;
            
            for(int i = 0; i< n; i++) {
            	  System.out.print(" " + a[i] + " ");
            	}
            	System.out.println("]");
            
            
            
            int tem = 0;

            for(int i=0; i<n;i++)
            {
            	for(int j=i+1;j<n;j++)
            	{
            		if(a[i]>a[j])
            		{
            			tem = a[i];
            			a[i] = a[j];
            			a[j] = tem;
            			
            		}
            	
            	}
            	
            	System.out.println(a[i]);
            }
            System.out.println("second largest element in the list is "+ "" + a[n-2]);
           


	}
	}


